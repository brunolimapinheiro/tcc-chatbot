{
  "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "esModuleInterop": true,
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"],
        "@/tests/*": ["tests/*"]
      },
      "skipLibCheck": true
  },
  "include": ["src", "tests"],
  "ts-node": {
  "require": ["tsconfig-paths/register"]
}
}
